{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"checkJs": false,
		"esModuleInterop": true,
		"importHelpers": true,
		"jsx": "preserve",
		"lib": ["dom", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"paths": {
			"/@/*": ["./src/*"],
			"mini-signals": ["node_modules/resource-loader/typings/mini-signals.d.ts"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"types": [
			"vite/client",
			"jest"
		]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}